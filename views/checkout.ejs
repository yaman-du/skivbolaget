<%- include('partials/head.ejs') %>

<body>
    <%- include('partials/header.ejs') %>

    <h1 class="formHeadline">Checkout page</h1>
    <br />


    <% if (user.status == "user") { %>

    <p class="formH">Hello <%= user.username %>, this is the content of your cart:</p>
        <div class="checkoutContainer">
            <% user.cart.forEach(album=> { %>
                <div class="yourCart">
                    <div class="item">
                        <div class="image checkoutImg">
                            <img src="<%= album.imgUrl %>" alt="Image of '<%= album.name %>' by <%= album.artist %>" />
                        </div>
                        <i><%= album.name %></i><br>
                        <b><%= album.artist %></b><br>
                        <b><%= album.price %> SEK</b><br>
                    </div>
                    <br />
                </div>
            <% }); %>
        </div>
    <% } %>
    <h3 class="formH">Total Sum: <%= totalPrice %> SEK</h3>

    <!-- input form for user info -->
    <!-- payment methods -->
    <form action="/confirmation" method="POST">
        <h3 class="formH">Billing Information</h3>
        <div class="formContainer">
            <div class="formName formControl">
                <label for="fullname"><i class="fa fa-user"></i> Full Name</label>
                <input type="text" id="fullname" name="fullname" placeholder="John M. Doe">
            </div>
            <div class="formEmail formControl">
                <label for="email"><i class="fa fa-envelope"></i> Email</label>
                <input type="text" id="email" name="email" placeholder="john@example.com">
            </div>
            <div class="formAdress formControl">
                <label for="address"><i class="fa fa-address-card-o"></i> Address</label>
                <input type="text" id="address" name="address" placeholder="FogdevÃ¤gen 41">
            </div>
            <div class="formCity formControl">
                <label for="city"><i class="fa fa-institution"></i> City</label>
                <input type="text" id="city" name="city" placeholder="Stockholm">
            </div>
            <div class="formState formControl">
                <label for="state">State</label>
                <input type="text" id="state" name="state" placeholder="Stockholm">
            </div>
            <div class="formZip formControl">
                <label for="zip">Zip</label>
                <input type="text" id="zip" name="zip" placeholder="12841">
            </div>
        </div>
        <h3 class="formH">Payment</h3>
        <div class="formContainer">
            <div class="formCards formControl">
                <label for="fname">Accepted Cards</label>
                <div class="icon-container">
                    <i class="fab fa-cc-visa" style="color:navy;"></i>
                    <i class="fab fa-cc-amex" style="color:blue;"></i>
                    <i class="fab fa-cc-mastercard" style="color:red;"></i>
                    <i class="fab fa-cc-discover" style="color:orange;"></i>
                </div>
            </div>
            <div class="formCardname formControl">
                <label for="cname">Name on Card</label>
                <input type="text" id="cname" name="cardname" value="John More Doe">
            </div>
            <div class="formCardnumber formControl">
                <label for="ccnum">Credit card number</label>
                <input type="text" id="ccnum" name="cardnumber" value="1111-2222-3333-4444">
            </div>
            <div class="formCardmonth formControl">
                <label for="expmonth">Exp Month</label>
                <input type="text" id="expmonth" name="expmonth" value="September">
            </div>
            <div class="formCardexp formControl">
                <label for="expyear">Exp Year</label>
                <input type="text" id="expyear" name="expyear" value="2018">
            </div>
            <div class="formCvv formControl">
                <label for="cvv">CVV</label>
                <input type="text" id="cvv" name="cvv" value="352">
            </div>
        </div>
        <div class="checkoutBtnForm">
        <button type="submit" class="checkoutBtn">Confirm Order</button>
        </div>
    </form>
    <br />
    <br />

</body>

</html>